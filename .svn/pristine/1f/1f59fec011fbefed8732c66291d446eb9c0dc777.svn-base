Public Class frmEventMessage
    Private Sub btnUpdate_Click(sender As Object, e As EventArgs) Handles btnUpdate.Click
        If frmAnnouncement.txtEventMessage.Text = "" Then
            frmAnnouncement.txtEventMessage.Text = txtMessage.Text
            frmAnnouncement.lblDateEvent1.Text = Format(Date.Today, "MMMM dd, yyyy")
            MsgBox("Running message has been updated!", MsgBoxStyle.Information, "Updated")
        ElseIf frmAnnouncement.txtEvent1.Text = "" Then
            frmAnnouncement.txtEvent1.Text = txtMessage.Text
            frmAnnouncement.lblDateEvent2.Text = Format(Date.Today, "MMMM dd, yyyy")
            MsgBox("Running message has been updated!", MsgBoxStyle.Information, "Updated")
        ElseIf frmAnnouncement.txtEvent2.Text = "" Then
            frmAnnouncement.txtEvent2.Text = txtMessage.Text
            frmAnnouncement.lblDateEvent3.Text = Format(Date.Today, "MMMM dd, yyyy")
            MsgBox("Running message has been updated!", MsgBoxStyle.Information, "Updated")
        ElseIf frmAnnouncement.txtEvent3.Text = "" Then
            frmAnnouncement.txtEvent3.Text = txtMessage.Text
            frmAnnouncement.lblDateEvent4.Text = Format(Date.Today, "MMMM dd, yyyy")
            MsgBox("Running message has been updated!", MsgBoxStyle.Information, "Updated")
        End If
    End Sub
End Class